<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".AtualizacaoUsuarioActivity">

    <EditText
        android:id="@+id/novoEmailEditText"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="15dp"
        android:hint="Novo Email"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/novaPasswordEditText"
        android:layout_width="378dp"
        android:layout_height="49dp"
        android:layout_below="@+id/novoEmailEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="15dp"
        android:hint="Nova Senha"
        android:textColorHint="@color/white"/>

    <Spinner
        android:id="@+id/roleSpinner"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="430dp"
        android:entries="@array/roles" />

    <Button
        android:id="@+id/atualizarButton"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="142dp"
        android:text="Atualizar"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/configButton"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="218dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="142dp"
        android:text="Configuração"
        android:background="@drawable/rounded_button"/>


</RelativeLayout>
